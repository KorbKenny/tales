<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/yellow_gradient">

    <TextView
        android:id="@+id/group_permissions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:text="Group Permissions"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:textColor="@color/black"/>

    <android.support.v7.widget.CardView
        android:id="@+id/settings_invite_card"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/green_gradient"/>
            <View
                android:id="@+id/settings_invite_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_gradient"/>
        </LinearLayout>

        <TextView
            android:id="@+id/settings_invite_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Only you can invite others"
            android:textSize="22sp"
            android:textColor="@color/black"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/settings_title_card"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/green_gradient"/>
            <View
                android:id="@+id/settings_title_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_gradient"/>
        </LinearLayout>

        <TextView
            android:id="@+id/settings_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Only you can edit the title"
            android:textSize="22sp"
            android:textColor="@color/black"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/settings_cover_card"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/green_gradient"/>
            <View
                android:id="@+id/settings_cover_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_gradient"/>
        </LinearLayout>

        <TextView
            android:id="@+id/settings_cover_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Only you can edit the cover"
            android:textSize="22sp"
            android:textColor="@color/black"/>

    </android.support.v7.widget.CardView>

</LinearLayout>