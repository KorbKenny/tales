<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@drawable/yellow_gradient">
    <TextView
        android:id="@+id/new_group_dialog_title"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000000"
        android:text="New Group"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/new_group_dialog_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="80"
        android:inputType="textAutoComplete|textCapSentences|textMultiLine"
        android:layout_margin="16dp"
        android:hint="Give it a rad title"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:id="@+id/new_group_linear_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/new_group_linear_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Linear"
                android:shadowColor="@color/black"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="3"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="18dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:background="@drawable/green_gradient"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_group_multiverse_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:padding="4dp"
            android:gravity="center"
            android:background="#00f9f9f9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/green_gradient"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_gradient"/>

            </LinearLayout>

            <TextView
                android:id="@+id/new_group_multi_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Multiverse"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="18dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:shadowDx="2"
                android:shadowColor="@color/black"
                android:textColor="@color/white"/>

        </RelativeLayout>




    </LinearLayout>


</LinearLayout>