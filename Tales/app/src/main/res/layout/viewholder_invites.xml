<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:gravity="center_vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/vh_invites_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:cardBackgroundColor="@color/blue_button"
        app:cardCornerRadius="8dp"
        android:paddingBottom="4dp"
        android:layout_marginRight="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Accept"
            android:layout_margin="12dp"
            android:fontFamily="casual"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:shadowColor="#000000"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/vh_invites_deny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/vh_invites_accept"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Deny"
            android:layout_margin="12dp"
            android:fontFamily="casual"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:shadowColor="#000000"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/vh_invites_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/vh_invites_deny"
        android:fontFamily="casual"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"/>


</RelativeLayout>