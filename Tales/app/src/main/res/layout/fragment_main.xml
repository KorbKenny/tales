<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/crumpled_paper_bg_purp">

    <com.draw.tales.classes.CoverImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/adventuretimecover"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/main_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/main_image"
        android:layout_alignParentRight="true"
        android:alpha="0"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDy="2"
        android:shadowDx="2"
        android:shadowRadius="3"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/main_image"
        android:background="@drawable/black_gradient"
        android:alpha=".8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_image"
        android:paddingTop="12dp">
        <android.support.v7.widget.CardView
            android:id="@+id/button_beginning"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            app:cardElevation="3dp">
            <TextView
                android:id="@+id/button_start_beginning_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/green_gradient"
                android:text="Start"
                android:gravity="center"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:shadowColor="@color/black"
                android:shadowRadius="3"
                android:shadowDx="3"
                android:shadowDy="3"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/button_continue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp">
            <TextView
                android:id="@+id/button_continue_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blue_gradient"
                android:text="Continue"
                android:gravity="center"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:visibility="visible"
                android:shadowColor="@color/black"
                android:shadowRadius="3"
                android:shadowDx="3"
                android:shadowDy="3"
                />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/main_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bookmark"
        android:visibility="gone"
        android:alpha="0"
        android:clickable="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"/>



</RelativeLayout>