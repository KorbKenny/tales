<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@drawable/crumpled_paper_bg_purp">



    <TextView
        android:id="@+id/dwg_which_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which group?"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/hilite_green"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/dwg_ex_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="X"
        android:textColor="@color/hilite_yellow"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dwg_recycler"
        android:layout_below="@id/dwg_which_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>